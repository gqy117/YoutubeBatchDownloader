@using System.Globalization
@using LocalResource = YoutubeBatchDownloader.Web.Resources.Home;
@{
    ViewBag.Title = LocalResource.YouTubeHtml;
}

<div class="jumbotron">
    <div>
        <form id="youTubeForm" action="@Url.Content("~/YouTube/Convert")" method="post">
            <h2>@LocalResource.YouTubeHtml</h2>
            <div>
                <span>@LocalResource.StartIndex</span><input name="startPosition" type="text" />
            </div>
            <p><textarea class="YouTubeHtml" name="youTubeHtml" placeholder="@LocalResource.PasteYourYouTubeHtmlHere"></textarea></p>
            <p class="buttonGo"><a class="btn btn-primary btn-lg" id="buttonGo">@LocalResource.Go</a></p>
        </form>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Index.js")"></script>
}